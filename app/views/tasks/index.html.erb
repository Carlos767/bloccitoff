<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr id="<% dom_id(task) %>">
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td>
            <% link_to "List Items", task_list_task_items_path(task) %>
            <%= link_to 'Show', task %>
            <%= link_to 'Edit', edit_task_path(task) %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
