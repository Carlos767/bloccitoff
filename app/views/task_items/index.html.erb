<h1><%= @task.title %></h1>


<ul class="task_items">
	<% @task.task_items.each do |task_item| %>
	<li id="<%= dom_id(task_item) %>">
		<%= task_item.content %>
		<%= link_to "Edit", edit_task_task_item_path(task_item) %>
		<%= link_to "Delete", task_task_item_path(task_item), method: delete:, data: { confirm: "Are you sure?" }  %>
	</li>
	<% end %>
</ul>

<p>
	<%= link_to "New Todo Item", new_task_task_item_path %>
</p>
